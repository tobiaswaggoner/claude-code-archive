# Auth Mode: "mock" (default) or "backend"
# - mock: Uses MockAuthService with demo credentials (admin@example.com / password123)
# - backend: Uses BetterAuthService connected to NEXT_PUBLIC_ARCHIVE_SERVER_URL
NEXT_PUBLIC_AUTH_MODE=mock

# Backend server URL (required when AUTH_MODE=backend)
NEXT_PUBLIC_ARCHIVE_SERVER_URL=http://localhost:4001

# System API key for server-side API calls (optional, for SSR)
ARCHIVE_API_KEY=
